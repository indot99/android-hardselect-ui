<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/user_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_barunpen_b"
                    android:textColor="#000000"
                    android:text="유저"
                    android:textSize="25dp"
                    />

                <TextView
                    android:id="@+id/hello_user_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_barunpen_r"
                    android:layout_margin="10dp"
                    android:text="안녕하세요. 유저입니다"/>
                <Button
                    android:id="@+id/kakao_openchatting_button"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/yellow_radius"
                    android:textColor="#6F2B00"
                    android:layout_marginTop="20dp"
                    android:textSize="15dp"
                    android:text="카카오 오픈채팅"
                    android:fontFamily="@font/nanum_barunpen_b"/>

                <Button
                    android:id="@+id/select_board_button"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_black_button"
                    android:textColor="#000000"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/nanum_barunpen_r"
                    android:textSize="15dp"
                    android:text="내가 선택했던 게시글 보기" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="1dp"
                        android:layout_marginRight="5dp"
                        android:layout_gravity="center"
                        android:background="#BDBDBD"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 게시글"
                        android:textSize="13dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="center"
                        android:background="#BDBDBD"/>

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/list_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

           </LinearLayout>

        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>




</RelativeLayout>