<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:orientation="vertical"
        android:gravity="center"
        >

        <EditText
            android:id="@+id/edit_register_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/nanum_barunpen_r"
            android:background="@drawable/black_storke"
            android:hint="아이디"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/edit_register_pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/nanum_barunpen_r"
            android:background="@drawable/black_storke"
            android:maxLength="16"
            android:hint="비밀번호(최소6자)"
            android:layout_margin="10dp"/>
        <EditText
            android:id="@+id/edit_register_pwcheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/nanum_barunpen_r"
            android:background="@drawable/black_storke"
            android:maxLength="16"
            android:hint="비밀번호 확인(최소6자)"
            android:layout_margin="10dp"/>

        <EditText
            android:id="@+id/edit_register_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:fontFamily="@font/nanum_barunpen_r"
            android:background="@drawable/black_storke"
            android:maxLength="8"
            android:hint="닉네임(최대8자)"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_register_email_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:fontFamily="@font/nanum_barunpen_r"
                android:background="@drawable/black_storke"
                android:hint="이메일"
                android:layout_margin="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum_barunpen_r"
                android:text="\@"
                android:textSize="20dp"/>

            <EditText
                android:id="@+id/edit_register_email_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:fontFamily="@font/nanum_barunpen_r"
                android:background="@drawable/black_storke"
                android:hint="이메일"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/button_register_complete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000000"
            android:layout_margin="10dp"
            android:fontFamily="@font/nanum_barunpen_r"
            android:textColor="#FFFFFF"
            android:text="회원가입"/>

        <Button
            android:id="@+id/button_register_privacy"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:drawableLeft="@drawable/ic_crop_square_black_24dp"
            android:background="@drawable/selector_comment_button"
            android:text="개인정보처리방침(보기)"/>

    </LinearLayout>

</RelativeLayout>